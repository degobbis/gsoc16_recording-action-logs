<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.6" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_USERLOGS</name>
    <author>Joomla! Project</author>
    <creationDate>May 2016</creationDate>
    <copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>0.5.0</version>
    <description>PLG_SYSTEM_USERLOGS_XML_DESCRIPTION</description>
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field
                    name="logDeletePeriod"
                    type="number"
                    default="0"
                    label="PLG_SYSTEM_USERLOGS_LOG_DELETE_PERIOD"
                    description="PLG_SYSTEM_USERLOGS_LOG_DELETE_PERIOD_DESC"
                    >
                </field>
                <field
					name="ip_logging"
					type="radio"
					label="PLG_SYSTEM_USERLOGS_IP_LOGGING"
					description="PLG_SYSTEM_USERLOGS_IP_LOGGING_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
                <field
                    name="log_events"
                    type="checkboxes"
                    label="PLG_SYSTEM_USERLOGS_LOG_EXTENSIONS"
                    description="PLG_SYSTEM_USERLOGS_LOG_EXTENSIONS_DESC"
                    multiple="true"
                    default= "onContentAfterSave,onContentAfterDelete,onContentChangeState,onExtensionAfterInstall,onExtensionAfterUninstall,onExtensionAfterUpdate,onUserAfterSave,onUserAfterDelete,onUserAfterDeleteGroup"
                    >
                    <option value="onContentAfterSave">PLG_SYSTEM_USERLOGS_OPTION_ON_CONTENT_SAVE</option>
                    <option value="onContentAfterDelete">PLG_SYSTEM_USERLOGS_OPTION_ON_CONTENT_DELETE</option>
                    <option value="onContentChangeState">PLG_SYSTEM_USERLOGS_OPTION_ON_CONTENT_CHANGE_STATE</option>
                    <option value="onExtensionAfterInstall">PLG_SYSTEM_USERLOGS_OPTION_ON_EXTENSION_INSTALL</option>
                    <option value="onExtensionAfterUninstall">PLG_SYSTEM_USERLOGS_OPTION_ON_EXTENSION_UNINSTALL</option>
                    <option value="onExtensionAfterUpdate">PLG_SYSTEM_USERLOGS_OPTION_ON_EXTENSION_UPDATE</option>
                    <option value="onUserAfterSave">PLG_SYSTEM_USERLOGS_OPTION_ON_USER_SAVE</option>
                    <option value="onUserAfterDelete">PLG_SYSTEM_USERLOGS_OPTION_ON_USER_DELETE</option>
                    <option value="onUserAfterDeleteGroup">PLG_SYSTEM_USERLOGS_OPTION_ON_USER_DELETE_GROUP</option>
                </field>
            </fieldset>
		</fields>
	</config>
    <files>
        <folder>sql</folder>
        <filename plugin="userlogs">userlogs.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_system_userlogs.ini</language>
        <language tag="en-GB">en-GB.plg_system_userlogs.sys.ini</language>
    </languages>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
    	<schemas>
    		<schemapath type="mysql">sql/updates/mysql</schemapath>
    	</schemas>
    </update>
</extension>
